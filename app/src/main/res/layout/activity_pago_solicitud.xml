<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PagoSolicitud">
    <TextView
        android:id="@+id/textView2"
        android:layout_width="152dp"
        android:layout_height="54dp"
        android:text="PARK-IN"
        android:textColor="#000000"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:src="@drawable/usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="346dp"
            android:layout_height="547dp"
            app:cardBackgroundColor="#D9D9D9"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <!-- Contenido del rectángulo aquí -->

            <TextView
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="30dp"
                android:text="Número de tarjeta"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editCardNumber"
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:inputType="number"
                android:layout_marginTop="65dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/input_background"
                android:hint="   Ingrese el número de tarjeta" />

            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="30dp"
                android:textSize="20sp"
                android:text="Fecha de vencimiento" />

            <EditText
                android:id="@+id/editExpirationDate"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_background"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="30dp"
                android:hint="  (MM/AA)"
                android:inputType="number"
                android:minHeight="48dp" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="130dp"
                android:layout_marginLeft="200dp"
                android:text="CVV"
                android:textSize="20sp"/>

            <EditText
                android:id="@+id/editCvv"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp"
                android:layout_marginLeft="200dp"
                android:background="@drawable/input_background"
                android:hint="  CVV"
                android:inputType="number"
                android:minHeight="48dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:layout_marginLeft="30dp"
                android:text="Nombre del titular"
                android:textSize="20sp"/>
            <EditText
                android:id="@+id/editTitular"
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="280dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/input_background"
                android:hint="  CVV"
                android:inputType="number"
                android:minHeight="48dp" />
            <Button
                android:id="@+id/btn_buscar"
                android:layout_width="287dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="480dp"
                android:backgroundTint="#000000"
                android:shadowColor="#593D3D"
                android:text="Pagar"
                android:textColor="#FFFFFF"
                android:textSize="19dp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="300dp"
                android:layout_height="220dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="300dp"
                android:src="@drawable/tarjetas" />
        </androidx.cardview.widget.CardView>



    </RelativeLayout>
    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/entradas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circuloplus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />
</androidx.constraintlayout.widget.ConstraintLayout>