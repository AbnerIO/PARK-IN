<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register">

    <EditText
        android:id="@+id/input_nombre"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="Nombre Completo"
        android:inputType="text"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.11" />

    <EditText
        android:id="@+id/input_correo"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:hint="Correo"
        android:inputType="textEmailAddress"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_nombre"
        app:layout_constraintVertical_bias="0.053" />

    <EditText
        android:id="@+id/input_contraseña"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_correo"
        app:layout_constraintVertical_bias="0.05" />

    <EditText
        android:id="@+id/input_contraseña2"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Reescribe la contraseña"
        android:inputType="textPassword"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_contraseña"
        app:layout_constraintVertical_bias="0.061" />

    <RadioGroup
        android:id="@+id/radio_tipoCliente"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_contraseña2"
        app:layout_constraintVertical_bias="0.488">

        <RadioButton
            android:id="@+id/opcion_propietario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Propietario"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/opcion_cliente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:text="Usuario"
            android:textSize="20sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btn_registrarme"
        android:layout_width="320dp"
        android:layout_height="80dp"
        android:backgroundTint="#000000"
        android:text="REGISTRARME"
        android:textColor="#FFFFFF"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/radio_tipoCliente"
        app:layout_constraintVertical_bias="0.485" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="¿Eres propietario o usuario?"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/radio_tipoCliente"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_contraseña2"
        app:layout_constraintVertical_bias="0.881" />

    <EditText
        android:id="@+id/input_telefono"
        android:layout_width="320dp"
        android:layout_height="48dp"
        android:background="@drawable/input_background"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Teléfono"
        android:inputType="phone"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_contraseña2"
        app:layout_constraintVertical_bias="0.107" />

</androidx.constraintlayout.widget.ConstraintLayout>