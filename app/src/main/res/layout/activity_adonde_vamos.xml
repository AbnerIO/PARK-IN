<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ADondeVamos">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="152dp"
        android:layout_height="54dp"
        android:text="PARK-IN"
        android:textColor="#000000"
        android:textSize="38dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.128"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />


    <ImageView
        android:id="@+id/btn_Profile"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:src="@drawable/usuario"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.59"
        app:layout_constraintStart_toEndOf="@+id/textView2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.044" />
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:layout_width="346dp"
            android:layout_height="547dp"
            app:cardBackgroundColor="#D9D9D9"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <!-- Contenido del rectángulo aquí -->

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="90dp"
                android:layout_marginTop="50dp"
                android:text="¿A dónde vamos?"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/editTextText2"
                android:layout_width="290dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/input_background"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Estado"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/editTextText4"
                android:layout_width="290dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="230dp"
                android:background="@drawable/input_background"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Ciudad"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <EditText
                android:id="@+id/editTextText5"
                android:layout_width="290dp"
                android:layout_height="48dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="330dp"
                android:background="@drawable/input_background"
                android:ems="10"
                android:fontFamily="sans-serif"
                android:hint="Colonia (opcional)"
                android:inputType="text"
                android:paddingLeft="10dp" />

            <Button
                android:id="@+id/btn_buscar"
                android:layout_width="287dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="430dp"
                android:backgroundTint="#000000"
                android:shadowColor="#593D3D"
                android:text="Buscar"
                android:textColor="#FFFFFF"
                android:textSize="19dp" />
        </androidx.cardview.widget.CardView>



    </RelativeLayout>
    <ImageView
        android:id="@+id/btn_ticketsUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/entradas"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.899"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

    <ImageView
        android:id="@+id/btn_ADondeVamos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/circuloplus"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.962" />

</androidx.constraintlayout.widget.ConstraintLayout>